@model ToDoList.Models.EditToDoPageModel

@{
    ViewData["Title"] = "Редагувати задачу";
}

<h2>Редагувати задачу</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="ToDoItem.Id" />

    <div class="form-group">
        <label asp-for="ToDoItem.Title"></label>
        <input asp-for="ToDoItem.Title" class="form-control" />
        <span asp-validation-for="ToDoItem.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ToDoItem.Deadline"></label>
        <input asp-for="ToDoItem.Deadline" type="datetime-local" class="form-control"
               value="@Model.ToDoItem.Deadline.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="ToDoItem.Deadline" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ToDoItem.CategoryId">Категорія</label>
        <select asp-for="ToDoItem.CategoryId" class="form-control">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span asp-validation-for="ToDoItem.CategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Зберегти</button>
    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
</form>
